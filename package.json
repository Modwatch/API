{
  "name": "modwatchapi",
  "version": "3.0.2",
  "description": "Modwatch API",
  "author": {
    "name": "Aaron Ballard",
    "email": "ans.ballard@gmail.com"
  },
  "scripts": {
    "start": "pm2 start server.js",
    "restart": "pm2 restart all",
    "dev": "micro ./dist/server/micro.js -p 3001",
    "local": "cross-env MODWATCH_DEV=true nodemon server.js --delay 1 --watch ./lib",
    "prettier": "prettier --write '{server.js,lib/**/*.ts}'",
    "build": "tsc && cp ./lib/server/oauth.ejs ./dist/server/"
  },
  "engines": {
    "node": ">= 12.14.0"
  },
  "dependencies": {
    "apollo-server": "^3.5.0",
    "bcrypt-nodejs": "0.0.3",
    "dotenv": "^8.2.0",
    "ejs": "^2.7.4",
    "graphql": "^15.7.2",
    "helmet": "^3.21.2",
    "jwt-simple": "^0.5.6",
    "micro": "^9.3.4",
    "micro-compress": "^1.0.0",
    "micro-cors": "^0.1.1",
    "microrouter": "^3.1.3",
    "mongo-sanitize": "^1.0.1",
    "mongodb": "^3.4.0",
    "url-pattern": "^1.0.3",
    "urlencoded-body-parser": "^3.0.0"
  },
  "devDependencies": {
    "@modwatch/types": "^0.3.0",
    "@types/micro": "^7.3.3",
    "@types/microrouter": "^3.1.1",
    "@types/mongodb": "^3.3.13",
    "@types/node": "^10.17.11",
    "micro-dev": "^3.0.0",
    "pm2": "^3.5.2",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "prompt": "^1.0.0",
    "typescript": "^3.7.3"
  },
  "private": true,
  "main": "server.js"
}
